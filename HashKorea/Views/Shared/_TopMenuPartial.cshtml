<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="navbar-brand d-flex align-items-center">
            <img src="~/main-icon.png" alt="Hash Korea Logo" class="me-2" style="height: 40px; width: auto;">
            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index"><span style="font-weight: bold; color: #88aca2;">Hash Korea</span></a>
            
        </div>
        <div class="d-block d-sm-none">
            <div class="d-flex align-items-center">
                @if (User.Identity.IsAuthenticated) {
                    <span class="me-2">@User.Identity.Name</span>
                }
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">

                <div class="d-sm-none mobile-menu">

                <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <div class="nav-link" onclick="logout()">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Logout</span>
                        </div>
                        }
                        else
                        {
                        <div class="nav-link" onclick="showLoginModal()">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Login</span>
                        </div>
                        }
                </li>

                    <!-- Home -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i>
                        <span>Home</span>
                    </a>
                </li>

                <!-- Information -->
                <li class="nav-item">
                    <div class="nav-link" onclick="toggleSubmenu('mobile-information')">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-info-circle"></i>
                                <span>Information</span>
                            </div>
                            <div class="menu-arrow">⌵</div>
                        </div>
                    </div>
                    <div class="submenu" id="mobile-information">
                        <a class="nav-link ps-4" asp-area="" asp-controller="InfoCenter" asp-action="TourMap"><i class="bi bi-map"></i> Tour Map</a>
                        <a class="nav-link ps-4" asp-area="" asp-controller="InfoCenter" asp-action="KoreaIs"><i class="bi bi-flag"></i> Korea is</a>
                        <a class="nav-link ps-4" asp-area="" asp-controller="InfoCenter" asp-action="Promotions"><i class="bi bi-currency-bitcoin"></i> Promotions</a>
                    </div>
                </li>

                <!-- Community -->
                <li class="nav-item">
                    <div class="nav-link" onclick="toggleSubmenu('mobile-community')">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-people"></i>
                                <span>Community</span>
                            </div>
                            <div class="menu-arrow">⌵</div>
                        </div>
                    </div>
                    <div class="submenu" id="mobile-community">
                        <a class="nav-link ps-4" asp-area="" asp-controller="Community" asp-action="Notice"><i class="bi bi-exclamation-circle"></i> Notice</a>
                        <a class="nav-link ps-4" asp-area="" asp-controller="Community" asp-action="FreeBoard"><i class="bi bi-clipboard"></i> Free Board</a>
                        <a class="nav-link ps-4" asp-area="" asp-controller="Community" asp-action="QnA"><i class="bi bi-question-circle"></i> Q&A</a>
                    </div>
                </li>
            </ul>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-none d-sm-flex align-items-center user-info">
                <span class="me-2">@User.Identity.Name</span>
                <a class="btn-login" onclick="logout()">
                    <span>Logout</span>
                </a>
            </div>
        }
        else
        {
            <div class="d-none d-sm-block">
                <a class="btn-login" onclick="showLoginModal()">
                    <span>Login</span>
                </a>
            </div>
        }

    </div>
</nav>

<script>

    function refreshTopMenu() {
        fetch('/Home/GetTopMenu')
            .then(response => response.text())
            .then(html => {
                document.querySelector('header').innerHTML = html;
            })
            .catch(error => console.error('Error:', error));
    }

    function logout() {
        // TO DO: to fix the expires date
        document.cookie = "auth_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/; Secure; SameSite=Strict;";
        refreshTopMenu();
    }

</script>