@{
    ViewData["Title"] = "Free Board";
}

<div class="board-container">
    <div class="result-header">
        <h2 class="result-count">Free Board<span class="highlight"></span></h2>
        <form asp-area="" asp-controller="User" asp-action="Post" method="get">
            <input type="hidden" name="type" value="@HashKorea.Common.Constants.POST_TYPE.FREEBOARD" />
            <button type="submit" class="post-button">Post</button>
        </form>
    </div>
    <div class="post-list">

        <div class="post-item">
            <div class="post-avatar">
                <div class="avatar-circle">SO</div>
            </div>
            <div class="post-main">
                <div class="post-header">
                    <span class="author">SA</span>
                    <span class="post-date">posted 1 day ago</span>
                </div>
                <h3 class="post-title">Google Search Engine Gets Major AI Overhaul</h3>
                <div class="post-content">
                    The latest AI developments from Google represent a significant leap forward in search technology. This update introduces more intuitive search algorithms and enhanced natural language processing capabilities, aiming to provide users with more accurate and contextually relevant results.
                </div>
            </div>
            <div class="post-actions">
                <div class="action-group">
                    <span class="likes"><i class="bi bi-hand-thumbs-up"></i> 2</span>
                    <span class="comments"><i class="bi bi-chat"></i> 0</span>
                </div>
                <button class="toggle-btn">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>

        <div class="post-item">
            <div class="post-avatar">
                <div class="avatar-circle">SO</div>
            </div>
            <div class="post-main">
                <div class="post-header">
                    <span class="author">SA</span>
                    <span class="post-date">posted 1 day ago</span>
                </div>
                <h3 class="post-title">OpenAI Partners with Reddit for ChatGPT Training Data</h3>
                <div class="post-content">
                    OpenAI announces a groundbreaking partnership with Reddit to enhance ChatGPT's training capabilities. This collaboration aims to improve user interaction patterns and generate more contextually appropriate responses through real-world conversation data.
                </div>
            </div>
            <div class="post-actions">
                <div class="action-group">
                    <span class="likes"><i class="bi bi-hand-thumbs-up"></i> 1</span>
                    <span class="comments"><i class="bi bi-chat"></i> 0</span>
                </div>
                <button class="toggle-btn">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>

        <div class="post-item">
            <div class="post-avatar">
                <div class="avatar-circle">SO</div>
            </div>
            <div class="post-main">
                <div class="post-header">
                    <span class="author">SA</span>
                    <span class="post-date">posted 1 day ago</span>
                </div>
                <h3 class="post-title">ChatGPT Introduces Direct Integration with Google Drive and OneDrive</h3>
                <div class="post-content">
                    ChatGPT's latest update brings seamless integration with major cloud storage platforms. Users can now directly access and analyze documents stored in Google Drive and OneDrive, streamlining workflow and enhancing productivity.
                </div>
            </div>
            <div class="post-actions">
                <div class="action-group">
                    <span class="likes"><i class="bi bi-hand-thumbs-up"></i> 3</span>
                    <span class="comments"><i class="bi bi-chat"></i> 0</span>
                </div>
                <button class="toggle-btn">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>


    </div>
</div>

<script>
    const postItems = document.querySelectorAll('.post-item');

    postItems.forEach(item => {
        const toggleBtn = item.querySelector('.toggle-btn');
        const content = item.querySelector('.post-content');
        const actions = item.querySelector('.post-actions');
        const icon = toggleBtn.querySelector('i');

        // post-item 전체 영역에 클릭 이벤트 추가
        item.addEventListener('click', () => {
            content.classList.toggle('show');
            actions.classList.toggle('hide');
            icon.classList.toggle('bi-chevron-up');
            icon.classList.toggle('bi-chevron-down');
        });

        // toggle-btn에 클릭 이벤트 추가
        toggleBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            content.classList.toggle('show');
            actions.classList.toggle('hide');
            icon.classList.toggle('bi-chevron-up');
            icon.classList.toggle('bi-chevron-down');
        });

        // 좋아요, 댓글 버튼 등 다른 버튼들의 이벤트 전파 중지
        const actionButtons = item.querySelectorAll('.action-group span');
        actionButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        });
    });


</script>
