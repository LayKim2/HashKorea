@{
    ViewData["Title"] = "Korea is";
}

@section Styles {
    <link rel="stylesheet" href="~/css/InfoCenter/KoreaIs.css" />
}

<div class="search-container">
    <form method="post">
        <div class="search-grid">
            <div class="search-item">
                <label>Search Period</label>
                <select class="modern-select">
                    <option value="">Select Period</option>
                    <option value="all">All</option>
                </select>
            </div>

            <div class="search-item">
                <label>News Type</label>
                <select class="modern-select">
                    <option value="">All Types</option>
                </select>
            </div>

            <div class="search-item">
                <label>Category</label>
                <select class="modern-select">
                    <option value="">All Categories</option>
                </select>
            </div>

            <div class="search-item">
                <label>Region</label>
                <select class="modern-select">
                    <option value="">All Regions</option>
                </select>
            </div>

            <div class="search-item">
                <label>Author</label>
                <select class="modern-select">
                    <option value="">All Authors</option>
                </select>
            </div>

            <div class="search-item search-keyword">
                <label>Search Keyword</label>
                <input type="text" class="modern-input" placeholder="Enter keywords...">
            </div>
        </div>

        <div class="search-button-container">
            <button type="submit" class="search-button">Search</button>
        </div>
    </form>
</div>

<div class="image-list-container">
    <div class="result-header">
        <h2 class="result-count">Total Results: <span class="highlight">10</span></h2>
        <form asp-area="" asp-controller="User" asp-action="Post" method="get">
            <input type="hidden" name="type" value="@HashKorea.Common.Constants.POST_TYPE.KOREAIS" />
            <button type="submit" class="post-button">Post</button>
        </form>
    </div>
    <div class="image-grid">
        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Random Image">
            </div>
            <div class="category">Travel</div>
            <h3 class="image-title">A Historical Journey Through Gyeongbokgung Palace</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Digital Art">
            </div>
            <div class="category">Art</div>
            <h3 class="image-title">Digital Art Exhibition at DDP</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Namsan Tower">
            </div>
            <div class="category">Landmark</div>
            <h3 class="image-title">N Seoul Tower: The Heart of the City</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Hanok Village">
            </div>
            <div class="category">Heritage</div>
            <h3 class="image-title">Exploring Seoul's Traditional Hanok Villages</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Street Food">
            </div>
            <div class="category">Food</div>
            <h3 class="image-title">Street Food Adventures in Myeongdong</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Nature">
            </div>
            <div class="category">Nature</div>
            <h3 class="image-title">Seoul's Hidden Gardens and Parks</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Seoul City">
            </div>
            <div class="category">Urban</div>
            <h3 class="image-title">Modern Seoul: A City That Never Sleeps</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Korean Food">
            </div>
            <div class="category">Culture</div>
            <h3 class="image-title">Traditional Korean Cuisine in Modern Times</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Temple">
            </div>
            <div class="category">History</div>
            <h3 class="image-title">Ancient Temples of Seoul</h3>
        </div>

        <div class="image-item">
            <div class="image-wrapper">
                <img src="https://picsum.photos/800/600" alt="Festival">
            </div>
            <div class="category">Events</div>
            <h3 class="image-title">Seoul Lantern Festival 2024</h3>
        </div>
    </div>
</div>

