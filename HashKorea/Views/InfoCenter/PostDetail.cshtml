@model HashKorea.DTOs.Common.GetPostDetailResponsetDto

<style>
    .post-title {
        font-size: 2.8em;
        margin: 40px 0 20px 0;
        color: #333;
    }

    .post-meta {
        font-size: 1.1em;
        color: #666;
        margin-bottom: 40px;
        border-bottom: 1px solid #eee;
        padding-bottom: 20px;
    }

    .post-body {
        font-size: 1.2em;
        line-height: 1.8;
        color: #333;
        margin: 0 auto;
        width: 100%;
        max-width: 900px;
    }

        .post-body p {
            margin-bottom: 24px;
        }

        .post-body img {
            max-width: 100%;
            height: auto;
            margin: 30px 0;
        }


</style>

<div class="full-page">
    <div class="content">
        <h1 class="post-title">@Model.Title</h1>
        <div class="post-meta">
            <span class="author">By: @Model.UserName</span> |
            <span class="date">Date: @Model.CreatedDate.ToString("yyyy-MM-dd")</span>
        </div>

        <div class="post-body">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
